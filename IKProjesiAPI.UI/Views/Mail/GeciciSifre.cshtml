@using IKProjesiAPI.Application.Models.DTOs
@model LoginDto

<div class="container-fluid mb-5 ">
    <div class="container-fluid pt-5 ">
        <div class="text-center mb-4">
            <h2 class="section-title px-5">
                <span class="px-2">Giriş Yap</span>
            </h2>
        </div>
        <div class="row px-xl-5">
            <div class="col-lg-7 mb-5 offset-3">
                <div class="contact-form">
                    <div id="success"></div>
                    <form asp-controller="Account" asp-action="Login" method="post" id="contactForm" novalidate="novalidate">
                        <div class="control-group">
                            <input asp-for="Email" class="form-control" placeholder="Kullanıcı E-Posta" required="required" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="control-group">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" required="required" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <br />
                        <div>
                            <button class="btn btn-primary py-2 px-4" type="submit" id="login">Giriş Yap</button>
                        </div>
                    </form>
                    <form method="post" asp-controller="Mail" asp-action="GeciciSifre">
                        <button class="btn btn-primary py-2 px-4" type="submit">Geçici Şifre Al</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


